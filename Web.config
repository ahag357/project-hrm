				<add assembly="System.Net, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A" />
			</assemblies>
		</compilation>

		<authorization>
			<allow users="*" />
		</authorization>

		<pages controlRenderingCompatibilityVersion="4.0" />
		<customErrors mode="Off" defaultRedirect="403.html" />
		<sessionState timeout="10" />
		<httpRuntime targetFramework="4.8" maxRequestLength="102400" executionTimeout="300" />
	</system.web>

	<!-- JSON & Script Settings -->
	<system.web.extensions>
		<scripting>
			<webServices>
				<jsonSerialization maxJsonLength="2147483647" />
			</webServices>
		</scripting>
	</system.web.extensions>

	<!-- Database Connection -->
	<connectionStrings>
		<add name="DBConString" connectionString="VXGSXBQyH2QHEDytuGa/QbKX7mPakzVB7lrOFgS5Vd6IVdYPs1npmQb8hVz2kwS8zEbCBszLb76HWptN6iF2EwhA/afZmq6T" providerName="System.Data.SqlClient" />
	</connectionStrings>

	<!-- IIS Configuration -->
	<system.webServer>
		<defaultDocument>
			<files>
				<add value="login.aspx" />
			</files>
		</defaultDocument>

		<directoryBrowse enabled="false" />

		<handlers>
			<remove name="ExtensionlessUrlHandler-Integrated-4.0" />
			<remove name="OPTIONSVerbHandler" />
			<remove name="TRACEVerbHandler" />
			<add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
		</handlers>

		<security>
			<requestFiltering>
				<requestLimits maxAllowedContentLength="104857600" />
				<!-- 100MB -->
			</requestFiltering>
		</security>

		<rewrite>
			<rules>
				<rule name="RedirectTo404ForWebService" stopProcessing="true">
					<match url=".*(WebHRCorner|WebTraining|WebEmployee|WebApi|WebPayRoll)\.asmx$" ignoreCase="true" />
					<action type="Redirect" url="/404.html" />
				</rule>
			</rules>
		</rewrite>
	</system.webServer>


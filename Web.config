<?xml version="1.0"?>
<configuration>
	<!-- App Settings -->
	<appSettings>
		<add key="owin:AutomaticAppStartup" value="false" />
	</appSettings>

	<!-- Compilation and Runtime Configuration -->
	<system.web>
		<compilation debug="true" targetFramework="4.8">
